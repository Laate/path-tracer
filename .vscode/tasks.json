{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.cc",
                "-o",
                "${fileDirname}/pathtracer"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
			"group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /bin/g++"
        }
    ]
}